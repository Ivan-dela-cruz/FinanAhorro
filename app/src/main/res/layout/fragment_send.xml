<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_send"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:text=""
                    android:textColor="#ff9800"
                    android:textSize="24dp" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/bombilla" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Luz"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/agua" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Agua"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/comida" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Comida"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/carrito" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Compras"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/comida" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Comida"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/gasolina" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Gasolina"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/celular" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Celular"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/bebida" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Bebida"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/estudio" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Estudio"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/utiles" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Utiles"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/taxi" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Taxi"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/ropa" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Ropa"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/gato" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Mascotas"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/trajeta" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Tarjetas"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/pesa" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="GYM"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:padding="2dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/regalo" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Regalo"
                                        android:textAlignment="center"
                                        android:textSize="12dp" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@drawable/utiles" />

                        <EditText
                            android:id="@+id/campo_texto"
                            android:layout_width="180dp"
                            android:layout_height="50dp"
                            android:textSize="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:background="@null"
                            android:inputType="number"
                            android:hint="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="2dp"
                            android:text="$00.00" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:text="Añadir"
                        android:textSize="20dp"
                        android:textColor="#FFF"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>